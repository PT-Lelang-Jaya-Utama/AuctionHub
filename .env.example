# ============================================
# E-Auction Platform Environment Configuration
# ============================================
# Copy this file to .env and update the values as needed
# DO NOT commit .env file to version control

# ============================================
# General Settings
# ============================================
NODE_ENV=production

# ============================================
# JWT Configuration (Auth Service)
# ============================================
# Secret key for signing JWT tokens - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration time
JWT_EXPIRATION=24h

# Refresh token expiration time
REFRESH_TOKEN_EXPIRATION=7d

# ============================================
# Redis Configuration (Auth & Bidding Services)
# ============================================
# Redis Sentinel hosts (comma-separated for multiple sentinels)
REDIS_SENTINEL_HOSTS=redis-sentinel:26379

# Redis master name for Sentinel
REDIS_MASTER_NAME=mymaster

# Direct Redis connection (fallback)
REDIS_HOST=redis-master
REDIS_PORT=6379

# ============================================
# MongoDB Configuration (User & Product Services)
# ============================================
# MongoDB replica set connection string
MONGODB_URI=mongodb://mongodb-primary:27017,mongodb-secondary1:27017,mongodb-secondary2:27017/eauction?replicaSet=rs0

# ============================================
# Neo4j Configuration (Recommendation Service)
# ============================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ============================================
# RabbitMQ Configuration (All Services)
# ============================================
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ============================================
# Kong API Gateway Configuration
# ============================================
KONG_PG_USER=kong
KONG_PG_PASSWORD=kongpass
KONG_PG_DATABASE=kong

# ============================================
# Service URLs (Internal Communication)
# ============================================
AUTH_SERVICE_URL=http://auth-service:3000
USER_SERVICE_URL=http://user-service:3001
PRODUCT_SERVICE_URL=http://product-service:3002
BIDDING_SERVICE_URL=http://bidding-service:3003
RECOMMENDATION_SERVICE_URL=http://recommendation-service:3004

# ============================================
# Service Ports
# ============================================
AUTH_SERVICE_PORT=3000
USER_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
BIDDING_SERVICE_PORT=3003
RECOMMENDATION_SERVICE_PORT=3004

# ============================================
# External Ports (Host Machine)
# ============================================
# Kong API Gateway
KONG_PROXY_PORT=8000
KONG_ADMIN_PORT=8001
KONG_GUI_PORT=8002

# Redis
REDIS_MASTER_PORT=6379
REDIS_SLAVE_PORT=6380
REDIS_SENTINEL_PORT=26379

# MongoDB
MONGODB_PRIMARY_PORT=27017
MONGODB_SECONDARY1_PORT=27018
MONGODB_SECONDARY2_PORT=27019

# Neo4j
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# RabbitMQ
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
